<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/btn_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ListViewTest"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RecyclerViewTest"
        app:layout_constraintTop_toBottomOf="@+id/btn_list_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CardViewTest"
        app:layout_constraintTop_toBottomOf="@+id/btn_recycler_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_text_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextInputTest"
        app:layout_constraintTop_toBottomOf="@+id/btn_card_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_tab_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TabLayoutTest"
        app:layout_constraintTop_toBottomOf="@+id/btn_text_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_coordinator_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CoordinatorLayoutTest"
        app:layout_constraintTop_toBottomOf="@+id/btn_tab_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_collapsing_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CollapsingLayoutTest"
        app:layout_constraintTop_toBottomOf="@+id/btn_tab_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_download_24"
        android:clickable="true"
        android:elevation="@dimen/dp_4"
        app:pressedTranslationZ="@dimen/dp_6"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>